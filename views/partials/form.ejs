<form class="form-horizontal" id="testForm" action="/" method="post" enctype="application/x-www-form-urlencoded">
    <h2>Basic Information</h2>
    <div class="form-group">
        <label class="control-label col-sm-2" for="first-name">First name:</label>
        <div class="col-sm-4">
            <input type="first-name" name="first-name" class="form-control" id="first-name" placeholder="First name">
        </div>
        <label class="control-label col-sm-2" for="last-name">Last name:</label>
        <div class="col-sm-4">
            <input type="last-name" name="last-name" class="form-control" id="last-name" placeholder="Last name">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="email">Email:</label>
        <div class="col-sm-4">
            <input type="email" name="email" class="form-control" id="email" placeholder="Email">
        </div>
        <label class="control-label col-sm-2" for="phone">Phone:</label>
        <div class="col-sm-4">
            <input type="phone" name="phone" class="form-control" id="phone" placeholder="Phone">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="location">Location:</label>
        <div class="col-sm-4">
            <input type="location" name="location" class="form-control" id="location" placeholder="Location">
        </div>
    </div>
    <h2>Resume / Cover Letter</h2>
    <div class="form-group">
        <label class="control-label col-sm-2" for="position">Position:</label>
        <div class="col-sm-4">
            <input type="position" name="position" class="form-control" id="position" placeholder="Position">
        </div>
        <!--<label class="control-label col-sm-2" for="team">Team:</label>-->
        <!--<div class="col-sm-4">-->
            <!--<input type="team" class="form-control" id="team" placeholder="Team">-->
        <!--</div>-->
        <label class="control-label col-sm-2" for="team">Team:</label>
        <div class="dropdown col-sm-2">
            <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                Team
                <span class="caret"></span>
            </button>
            <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenu1">
                <li><a href="#">Technology</a></li>
                <li><a href="#">Product</a></li>
                <li><a href="#">Customer Service</a></li>
                <li><a href="#">Sales</a></li>
            </ul>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="position">Why:</label>
        <div class="col-sm-4">
            <textarea type="why" name="why" class="form-control" id="why" placeholder="Why are you perfect for that job?"></textarea>
        </div>
        <label class="control-label col-sm-2" for="resume">Resume:</label>
        <div class="col-sm-4">
            <input type="resume" name="resume" class="form-control" id="resume" placeholder="Resume">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="excited">Excited:</label>
        <div class="col-sm-4">
            <textarea type="excited" name="excited" class="form-control" id="excited" placeholder="What makes you excited to work here?"></textarea>
        </div>
        <label class="control-label col-sm-2" for="cover-letter">Cover Letter:</label>
        <div class="col-sm-4">
            <input type="cover-letter" name="excited" class="form-control" id="cover-letter" placeholder="Cover Letter">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="excited">LinkedIn Profile:</label>
        <div class="col-sm-4">
            <input type="linkedin" name="linkedin" class="form-control" id="linkedin" placeholder="LinkedIn Profile">
        </div>
        <label class="control-label col-sm-2" for="website">Website:</label>
        <div class="col-sm-4">
            <input type="website" name="website" class="form-control" id="website" placeholder="Website">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-5 col-sm-7">
            <button type="submit" id="testFormSubmit" class="btn btn-default">Submit</button>
        </div>
    </div>
</form>